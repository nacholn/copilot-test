{
  "name": "@cycling-network/desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Desktop app for Cycling Network Platform (Electron-ready)",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "clean": "rm -rf .next",
    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },
  "build": {
    "appId": "com.cyclingnetwork.desktop",
    "productName": "Cycling Network",
    "files": [
      "electron/**/*",
      ".next/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@cycling-network/config": "*",
    "@cycling-network/ui": "*",
    "@supabase/supabase-js": "^2.39.0",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "typescript": "^5.3.3"
  }
}
